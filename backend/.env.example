# The connection string for your MySQL database
DATABASE_URL="mysql://authuser:password123@localhost:3306/auth"

# JWT Secrets
ACCESS_TOKEN_SECRET="your_super_strong_random_access_secret"
REFRESH_TOKEN_SECRET="your_super_strong_random_refresh_secret"

# Email (using a service like Mailtrap.io for development is recommended)
MAIL_HOST="sandbox.smtp.mailtrap.io"
MAIL_PORT=2525
MAIL_USER="dfa7082498f4da"
MAIL_PASS="2f235b6942faf3"
MAIL_FROM="Auth System <no-reply@authsystem.com>"

# Comma-separated list of frontend origins allowed to call the API
FRONTEND_URLS="http://localhost:5173"

# Network binding
HOST=0.0.0.0
PORT=3000

# Rate limiting (defaults used if unset)
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# --- Default Seed Users (use strong passwords) ---
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin
USER_EMAIL=user@example.com
USER_PASSWORD=user

ENABLE_SQL_EXECUTOR=false
